{
  "manifest_version": 2,

  "name": "__MSG_extName__",
  "description": "__MSG_extDesc__",
  "version": "1.0",
  "default_locale": "en",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "dist/main.js"
      ],
      "run_at": "document_end"
    }
  ],

  "icons": {
    "128": "icons/icon.png"
  },

  "permissions": [
    "activeTab",
    "storage",
    "http://*/*",
    "https://*/*"
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';"
}
